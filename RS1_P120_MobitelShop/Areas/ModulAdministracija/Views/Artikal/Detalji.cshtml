@model RS1_P120_MobitelShop.Areas.ModulAdministracija.Models.ArtikalEditVM

@{
    //Layout = null;
}

<div class="content-wrapper">
    <div class="container-fluid">
        <!-- Breadcrumbs-->
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="/ModulAdministracija/Artikal/Prikazi">Artikal</a>
            </li>
            <li class="breadcrumb-item active">Specifikacije telefona       
            </li>
        </ol>
        <table class="table-light">
            <tbody>
                <tr>
                    <th colspan="2" style="font-family:'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;color:#0094ff">SPECIFIKACIJE
                      
                    </th>
               
                 </tr>
                <tr>
                    <td>VRSTA</td>
                    <td class="form-control">Pametni telefoni</td>
                </tr>
                <tr>
                    <td>MODEL TELEFONA</td>
                    <td>
                        @Html.Action("ModelTelefona", "Artikal", new { id=Model.ArtikalId})
                    </td>
                </tr>
                <tr>
                    <td>OPERATIVNI SISTEM</td>
                    <td>
                        @Html.TextBoxFor(model => model.operativniSistem, new { @class = "form-control",@readonly = true })
                </td>
            </tr>
            <tr>
                <td>EKSTERNA MEMORIJA</td>
                <td>
                    @Html.TextBoxFor(model => model.eksternaMemorija, new { @class = "form-control", @readonly = true })
            </td>
        </tr>
        <tr>
            <td>EKRAN</td>
            <td>
                @Html.TextBoxFor(model => model.ekran, new { @class = "form-control", @readonly = true })
        </td>
    </tr>
    <tr>
        <td>REZOLUCIJA</td>
        <td>
            @Html.TextBoxFor(model => model.rezolucija, new { @class = "form-control", @readonly = true })
    </td>
</tr>
<tr>
    <td>VRSTA EKRANA</td>
    <td>
        @Html.TextBoxFor(model => model.vrstaEkrana, new { @class = "form-control", @readonly = true })
</td>
</tr>

<tr>
    <td>KAMERA</td>
    <td>
        @Html.TextBoxFor(model => model.kamera, new { @class = "form-control", @readonly = true })
</td>
</tr>
<tr>
    <td>POVEZIVANJE</td>
    <td>
        @Html.TextBoxFor(model => model.povezivanje, new { @class = "form-control", @readonly = true })
</td>
</tr>
<tr>
    <td>JEZGRE PROCESORA </td>
    <td>
        @Html.TextBoxFor(model => model.jezgreProcesora, new { @class = "form-control", @readonly = true })
    </td>
</tr>
<tr>
    <td>RAM</td>
    <td>
        @Html.TextBoxFor(model => model.RAM, new { @class = "form-control", @readonly = true })
</td>
             
</tr>
                
</tbody>
            
</table>
</div>
</div>
