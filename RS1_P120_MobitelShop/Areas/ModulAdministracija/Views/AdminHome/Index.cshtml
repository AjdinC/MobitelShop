@using RS1_P120_MobitelShop.Models;
@using RS1_P120_MobitelShop.Areas.ModulAdministracija.Controllers;
@using RS1_P120_MobitelShop.Areas.ModulAdministracija.ViewModels;
@{
    //Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Mobitel shop</title>
    <link href="~/Areas/ModulAdministracija/Content/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Areas/ModulAdministracija/Content/vendor/font-awesome/css/font-awesome.min.css" rel="stylesheet" />
    <link href="~/Areas/ModulAdministracija/Content/vendor/datatables/dataTables.bootstrap4.css" rel="stylesheet" />
    <link href="~/Areas/ModulAdministracija/Content/css/sb-admin.css" rel="stylesheet" />
</head>
<body>
   
    <div class="content-wrapper">
        <div class="container-fluid">
            <!-- Breadcrumbs-->
            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                    <a href="/ModulAdministracija/AdminHome">Admin home</a>
                </li>
                <li class="breadcrumb-item active">Upravljačka ploča</li>
            </ol>
            <div class="row">
                <div class="col-xl-3 col-sm-6 mb-4">
                    <div class="card text-white bg-primary o-hidden h-100">
                        <div class="card-body">
                            <div class="card-body-icon">
                                <i class="fa fa-fw fa-user"></i>
                            </div>
                            <div class="mr-5">@ViewBag.Administratori Administratora</div>
                        </div>
                        <a class="card-footer text-white clearfix small z-1" href="/ModulAdministracija/Administratori/Prikazi">
                            <span class="float-left">Vidi detalje</span>
                            <span class="float-right">
                                <i class="fa fa-angle-right"></i>
                            </span>
                        </a>
                    </div>
                </div>
               
                    <div class="col-xl-3 col-sm-6 mb-3">
                        <div class="card text-white bg-secondary o-hidden h-100">
                            <div class="card-body">
                                <div class="card-body-icon">
                                    <i class="fa fa-fw fa-user"></i>
                                </div>
                                <div class="mr-5">@ViewBag.Dobavljaci Dobavljača</div>
                            </div>
                            <a class="card-footer text-white clearfix small z-1" href="/ModulAdministracija/Dobavljaci/Prikazi">
                                <span class="float-left">Vidi detalje</span>
                                <span class="float-right">
                                    <i class="fa fa-angle-right"></i>
                                </span>
                            </a>
                        </div>
                    </div>
                    <div class="col-xl-3 col-sm-6 mb-3">
                        <div class="card text-white bg-warning o-hidden h-100">
                            <div class="card-body">
                                <div class="card-body-icon">
                                    <i class="fa fa-fw fa-users"></i>
                                </div>
                                <div class="mr-5">@ViewBag.Klijenti Klijenta</div>
                            </div>
                            <a class="card-footer text-white clearfix small z-1" href="/ModulAdministracija/Klijenti/Prikazi">
                                <span class="float-left">Vidi detalje</span>
                                <span class="float-right">
                                    <i class="fa fa-angle-right"></i>
                                </span>
                            </a>
                        </div>
                    </div>
                    <div class="col-xl-3 col-sm-6 mb-3">
                        <div class="card text-white bg-success o-hidden h-100">
                            <div class="card-body">
                                <div class="card-body-icon">
                                    <i class="fa fa-fw fa-shopping-cart"></i>
                                </div>
                                <div class="mr-5">Narudžbe</div>
                            </div>
                            <a class="card-footer text-white clearfix small z-1" href="/ModulAdministracija/Narudzbe/Prikazi">
                                <span class="float-left">Vidi detalje</span>
                                <span class="float-right">
                                    <i class="fa fa-angle-right"></i>
                                </span>
                            </a>
                        </div>
                    </div>
                    <div class="col-xl-3 col-sm-6 mb-3">
                        <div class="card text-white bg-dark o-hidden h-100">
                            <div class="card-body">
                                <div class="card-body-icon">
                                    <i class="fa fa-fw fa-apple"></i>
                                </div>
                                <div class="mr-5">@ViewBag.Artikli Artikala na stanju</div>
                            </div>
                            <a class="card-footer text-white clearfix small z-1" href="/ModulAdministracija/Artikal/Prikazi">
                                <span class="float-left">Vidi detalje</span>
                                <span class="float-right">
                                    <i class="fa fa-angle-right"></i>
                                </span>
                            </a>
                        </div>
                    </div>
                <div class="col-xl-3 col-sm-6 mb-3">
                    <div class="card text-white bg-danger o-hidden h-100">
                        <div class="card-body">
                            <div class="card-body-icon">
                                <i class="fa fa-fw fa-percent"></i>
                            </div>
                            <div class="mr-5">Akcije</div>
                        </div>
                        <a class="card-footer text-white clearfix small z-1" href="/ModulAdministracija/Popust/Dodaj">
                            <span class="float-left">Dodaj popust za telefon</span>
                            <span class="float-right">
                                <i class="fa fa-angle-right"></i>
                            </span>
                        </a>
                    </div>
                </div>
                </div>
            </div>
        </div>
    @*</div>*@
</body>
</html>
