        @if (Model.GalerijaSlika.Count == 0)
    {
        <img src="@Url.Content(@Model.Slika)" style="margin-left:-80px;height:500px;width:500px" alt="@Model.Slika">
}
else
{
    <div class="container">
        <div id="main_area"> 
            <div class="row">
                <div id="slider"> 
                    <div class="row">
