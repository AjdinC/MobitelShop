
<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js"></script>

<div class="alert alert-warnin" id="previous">
    <strong>Confirm your account</strong>
    <input type="submit" class="btn btn-warning" value="Confirm" onclick="Verified()" />
</div>
<div class="alert alert-success" id="after" style="display:none">
    <strong><span class="glyphicon glyphicon-ok"></span>Your account is activated</strong>
</div>
<script>
    function Verified() {
        $.ajax({
            type: "post",
            url: "/Autentifikacija/RegisterConfirm",
            data: { 'loginId': '@ViewBag.loginId' },
            success: function (msg) {
                $("#previous").hide();
                $("#after").show();
            }
        })
    }
</script>